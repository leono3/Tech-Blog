<div class="container">

    {{#if isLoggedIn}}
    <div class="container rounded bg-secondary mt-5">

        <h1 class="p-3">Welcome: {{user.username}}</h1>
        <button class="p-2 m-3 btn btn-dark" data-bs-target="#postBlog-modal" data-bs-toggle="modal">Post Blog</button>

    </div>
    {{/if}}


    <h3 class="mt-5">Recent Blog Posts</h3>

    {{#each blogPosts as | blog |}}
    <div class="container rounded bg-secondary my-3 p-2">
        <a class="cardLink" href="/post/{{id}}">
            {{> blogCard}}
        </a>
    </div>
    {{/each}}
</div>